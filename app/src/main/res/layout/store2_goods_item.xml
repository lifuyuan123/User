<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lin_store2_item"
        android:layout_marginTop="@dimen/x5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x105">
        <ImageView
            android:id="@+id/store2_iv_icon"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/icon_store2_item"
            android:layout_width="@dimen/x105"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/store2_tv_title"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x5"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/x13"
                android:textColor="#000C1A"
                android:lineSpacingExtra="@dimen/x2"
                android:text="啊的发生打发打发打发打发啊手动阀的沙发沙发发啊士大夫大师傅大师傅打打发士大夫"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
            <TextView
                android:id="@+id/store2_tv_freeshipping"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/x12"
                android:textColor="#878787"
                android:text="包邮"
                android:layout_marginTop="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:gravity="center_vertical"
                        android:text="￥"
                        android:layout_marginLeft="@dimen/x10"
                        android:textColor="#FB4644"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/store2_tv_money"
                        android:textSize="@dimen/x18"
                        android:text="399"
                        android:textColor="#FB4644"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:gravity="right|center"
                        android:layout_marginRight="@dimen/x10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/store2_iv_reduce"
                            android:src="@drawable/icon_store2_reduce"
                            android:layout_width="@dimen/x20"
                            android:layout_height="@dimen/x20" />
                        <TextView
                            android:gravity="center"
                            android:id="@+id/store2_tv_count"
                            android:layout_marginLeft="@dimen/x5"
                            android:layout_marginRight="@dimen/x5"
                            android:text="3"
                            android:textSize="@dimen/x13"
                            android:textColor="#000C1A"
                            android:layout_width="@dimen/x20"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/store2_iv_add"
                            android:src="@drawable/icon_store2_add"
                            android:layout_width="@dimen/x20"
                            android:layout_height="@dimen/x20" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:background="@color/app_fade_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>