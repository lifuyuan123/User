<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/x10"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x10"
    android:background="@drawable/adress_item_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100">
        <LinearLayout
            android:layout_marginLeft="@dimen/x10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/adress_tv_name"
                android:textColor="#202020"
                android:textSize="@dimen/x14"
                android:text="杨霞"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/adress_tv_phone"
                android:textColor="#202020"
                android:textSize="@dimen/x14"
                android:layout_marginLeft="@dimen/x20"
                android:text="12345678901"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/adress_tv_adress"
            android:textSize="@dimen/x12"
            android:textColor="#646464"
            android:layout_marginTop="@dimen/x5"
            android:singleLine="true"
            android:layout_marginRight="@dimen/x10"
            android:text="四川省成都市武侯区百利包和花园"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="@dimen/x15"
            android:background="@color/app_fade_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />

        <LinearLayout
            android:layout_marginLeft="@dimen/x10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <LinearLayout
                android:id="@+id/adress_lin_choice"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/adress_checkbox"
                    android:button="@null"
                    android:background="@drawable/checkbox_background"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20" />
                <TextView
                    android:id="@+id/adress_tv_check"
                    android:textColor="#202020"
                    android:textSize="@dimen/x12"
                    android:layout_marginLeft="@dimen/x5"
                    android:text="设为默认"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="right|center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/adress_lin_edit"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/icon_adress_edit"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20" />
                    <TextView
                        android:textColor="#202020"
                        android:textSize="@dimen/x12"
                        android:layout_marginLeft="@dimen/x5"
                        android:text="编辑"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/adress_lin_delete"
                    android:layout_marginLeft="@dimen/x20"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/icon_adress_delete"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20" />
                    <TextView
                        android:layout_marginRight="@dimen/x10"
                        android:textColor="#202020"
                        android:textSize="@dimen/x12"
                        android:layout_marginLeft="@dimen/x5"
                        android:text="删除"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                
                
            </LinearLayout>
            
            
        </LinearLayout>




    </LinearLayout>

</LinearLayout>