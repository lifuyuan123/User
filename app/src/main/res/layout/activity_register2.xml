<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_primary_blue"
    tools:context="com.example.mayikang.wowallet.ui.act.Register2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <RelativeLayout
            android:id="@+id/rela_back"
            android:layout_marginLeft="@dimen/x5"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40">
            <ImageView
                android:src="@mipmap/icon_left_white_arrow"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20" />

        </RelativeLayout>
    </RelativeLayout>

    <!--大 logo-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150">
        <ImageView
            android:src="@mipmap/ic_login_icon"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100" />
    </RelativeLayout>
    <!--密码-->
    <RelativeLayout
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/x_normal_white_blue_retangle_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <EditText
            android:singleLine="true"
            android:id="@+id/edt_password"
            android:inputType="textPassword"
            android:textSize="@dimen/x15"
            android:layout_centerInParent="true"
            android:textColor="@color/color_primary_white"
            android:textColorHint="@color/color_primary_white"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <!--确认密码-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <RelativeLayout
            android:background="@drawable/x_normal_white_blue_retangle_border"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <EditText
                android:singleLine="true"
                android:id="@+id/edt_password_agin"
                android:inputType="textPassword"
                android:textSize="@dimen/x15"
                android:layout_centerInParent="true"
                android:textColor="@color/color_primary_white"
                android:textColorHint="@color/color_primary_white"
                android:gravity="center_vertical"
                android:hint="请再次输入密码"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>



    </LinearLayout>

    <!--邀请码-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <RelativeLayout
            android:background="@drawable/x_normal_white_blue_retangle_border"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <EditText
                android:singleLine="true"
                android:id="@+id/edt_invitation_code"
                android:inputType="text"
                android:textSize="@dimen/x15"
                android:layout_centerInParent="true"
                android:textColor="@color/color_primary_white"
                android:textColorHint="@color/color_primary_white"
                android:gravity="center_vertical"
                android:hint="请输入邀请码（选填）"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:gravity="center_vertical"
        >

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_gravity="center_vertical"
            android:checked="true"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25" />
        <LinearLayout
            android:id="@+id/registre2_protocol"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#8AD5FB"
                android:layout_marginLeft="@dimen/x5"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="您已阅读并同意"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/color_primary_white"
                android:layout_marginLeft="@dimen/x5"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="惠生活注册协议"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <!--注册-->
    <Button
        android:id="@+id/bt_regist"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:textSize="@dimen/x16"
        android:textColor="@color/color_primary_white"
        android:text="注册"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/x_full_retangle_deep_blue_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_land"
            android:layout_marginBottom="@dimen/x10"
            android:textColor="@color/color_primary_white"
            android:text="我有帐号，立即登录>>"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
