<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bind_new_tel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mayikang.wowallet.ui.act.BindNewTelActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:id="@+id/BindNewTel_back_rl"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="绑定新的手机号码"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
            />
        <TextView
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:text="将手机号变更为："
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/x12"
            />
        <TextView
            android:id="@+id/BindNewTel_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x10"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="@dimen/x12"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/BindNewTel_edt_code"
        android:layout_width="@dimen/x300"
        android:layout_marginLeft="@dimen/x10"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x10"
        android:hint="短信验证码"
        android:background="@drawable/ic_change_edt"
        android:paddingLeft="@dimen/x10"
        />
    <Button
        android:id="@+id/BindNewTel_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:text="确认绑定"
        android:layout_marginTop="@dimen/x20"
        android:textColor="@color/color_primary_white"
        android:background="@color/color_primary_blue"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        />
</LinearLayout>
