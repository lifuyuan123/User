<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_primary_white">

    <LinearLayout
        android:id="@+id/item_home_lay_6_ll_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100">
        <RelativeLayout
            android:layout_width="@dimen/x95"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/home_lay_6_iv_logo"
                android:layout_marginLeft="@dimen/x5"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_home_test_2"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="@dimen/x5"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/home_lay_6_tv_name"
                    android:layout_alignParentBottom="true"
                    android:maxEms="10"
                    android:textStyle="bold"
                    android:textSize="@dimen/x15"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#454545"
                    android:text="圣保罗美肤中心"
                    android:layout_width="@dimen/x150"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/home_lay_6_tv_distance"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:maxEms="10"
                    android:textSize="@dimen/x12"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#98999A"
                    android:text="985m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/home_lay_6_tv_describe"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/x12"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColor="#98999A"
                    android:text="[多城市] 全场参与返利，满500返100"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <com.github.ornolfr.ratingview.RatingView
                        android:id="@+id/home_lay_6_ratingView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        app:drawable_empty="@mipmap/icon_star_empty"
                        app:drawable_filled="@mipmap/icon_star_full"
                        app:drawable_half="@mipmap/icon_star_half"
                        app:drawable_margin="2dp"
                        app:drawable_size="@dimen/x16"
                        app:is_indicator="true"
                        app:max_count="5"
                        app:rating="0" />

                    <TextView
                        android:id="@+id/home_lay_6_rq"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="人气：66"
                        android:textColor="#98999A"
                        android:textSize="@dimen/x11"
                        android:gravity="center_vertical|right"
                        android:layout_marginRight="@dimen/x5"
                        />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:background="@color/app_fade_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>
