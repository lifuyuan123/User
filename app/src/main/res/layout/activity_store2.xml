<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mayikang.wowallet.ui.act.Store2Activity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x135">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/store2_title_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--title-->
        <RelativeLayout
            android:layout_marginTop="@dimen/x15"
            android:id="@+id/rel_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            >

            <RelativeLayout
                android:id="@+id/back"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40">
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_left_white_arrow"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20" />
            </RelativeLayout>

            <TextView
                android:id="@+id/store2_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="商家店铺"
                android:textColor="@color/color_primary_white"
                android:textSize="@dimen/x18" />

            <LinearLayout
                android:layout_marginRight="@dimen/x10"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/act_store2_rl_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="visible"
                        android:id="@+id/act_store2_iv_collect"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_store_collect_white"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/act_store2_iv_collected"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_store_collected"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/act_store2_rl_open_share"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_store_share_white"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/rel_title"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/store2_iv_icon"
                android:src="@mipmap/icon_default_portrait"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60" />
            
            <LinearLayout
                android:layout_marginLeft="@dimen/x10"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/store2_tv_introduce"
                        android:textSize="@dimen/x12"
                        android:textColor="@color/white"
                        android:text="店铺介绍"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="@dimen/x2"
                        android:layout_marginBottom="@dimen/x2"
                        android:layout_marginLeft="@dimen/x5"
                        android:background="@color/white"
                        android:layout_width="@dimen/x1"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/store2_tv_score"
                        android:textSize="@dimen/x12"
                        android:layout_marginLeft="@dimen/x5"
                        android:text="0.0分"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="@dimen/x5"
                        android:background="@color/white"
                        android:layout_width="@dimen/x1"
                        android:layout_marginTop="@dimen/x2"
                        android:layout_marginBottom="@dimen/x2"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/store2_tv_distance"
                        android:textSize="@dimen/x12"
                        android:layout_marginLeft="@dimen/x5"
                        android:text="0.0km"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/icon_store2_adress"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/x16"
                        android:layout_height="@dimen/x16" />
                    
                    <TextView
                        android:id="@+id/store2_tv_adress"
                        android:textSize="@dimen/x11"
                        android:lineSpacingExtra="@dimen/x2"
                        android:layout_marginLeft="@dimen/x5"
                        android:text="理想中心3栋1307室"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/store2_tv_payment"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/x15"
                android:text="店内付款"
                android:padding="@dimen/x5"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/x_grandual_pink_retangle_border"
                android:layout_marginRight="@dimen/x10"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50" />

        </LinearLayout>

    </RelativeLayout>


