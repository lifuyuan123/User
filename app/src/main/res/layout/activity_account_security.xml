<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mayikang.wowallet.ui.act.AccountSecurityActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:orientation="horizontal"
            android:background="@color/color_primary_blue"
            >
            <RelativeLayout
                android:layout_width="@dimen/x40"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/setting_back"
                >
                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:src="@mipmap/icon_left_white_arrow"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/x40"
                android:layout_height="match_parent"
                android:text="账户安全"
                android:gravity="center"
                android:textColor="@color/color_primary_white"
                android:textSize="@dimen/x18"
                />
        </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:id="@+id/setting_paypas_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/color_primary_white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="支付密码"
            android:textSize="@dimen/x15"
            android:textColor="@color/color_primary_black"
            android:layout_marginLeft="@dimen/x10"
            />
        <ImageView
            android:layout_width="@dimen/x13"
            android:layout_height="@dimen/x13"
            android:src="@mipmap/icon_arrow_gray_right"
            android:layout_marginRight="@dimen/x10"
            />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="@dimen/x10"
        android:background="@color/app_fade_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1" />

    <LinearLayout
        android:id="@+id/setting_loginpas_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/color_primary_white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="登陆密码"
            android:textSize="@dimen/x15"
            android:textColor="@color/color_primary_black"
            android:layout_marginLeft="@dimen/x10"
            />
        <ImageView
            android:layout_width="@dimen/x13"
            android:layout_height="@dimen/x13"
            android:src="@mipmap/icon_arrow_gray_right"
            android:layout_marginRight="@dimen/x10"
            />
    </LinearLayout>
</LinearLayout>
