<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/add_friends_item"
        android:layout_width="@dimen/x320"
        android:layout_height="@dimen/x60"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/add_friends_item_icon"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/x15"

            />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginLeft="@dimen/x10"
           android:orientation="vertical"
           android:gravity="center_vertical"
           >
           <TextView
               android:id="@+id/add_friends_item_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="刘浩"
               android:textColor="@color/text_color"
               android:textSize="@dimen/x15"
               android:layout_marginLeft="@dimen/x15"
               />
           <TextView
               android:layout_marginTop="@dimen/x2"
               android:id="@+id/add_friends_item_Phone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="刘浩"
               android:textColor="@color/text_color"
               android:textSize="@dimen/x15"
               android:layout_marginLeft="@dimen/x15"
               />
       </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/app_fade_gray"
        />
</LinearLayout>