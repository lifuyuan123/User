<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_user_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mayikang.wowallet.ui.act.ChangeUserPhoneActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/x40"
    android:orientation="horizontal"
    android:background="@color/color_primary_blue"
    >
    <RelativeLayout
        android:id="@+id/changePhone_back_rl"
        android:layout_width="@dimen/x40"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@mipmap/icon_left_white_arrow"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="验证原手机号码"
        android:gravity="center"
        android:textColor="@color/color_primary_white"
        android:textSize="@dimen/x18"
        />
    <TextView
        android:id="@+id/changePhone_save_txt"
        android:layout_width="@dimen/x40"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/color_primary_white"
        />
</LinearLayout>
    <EditText
        android:id="@+id/change_phone_edt"
        android:layout_width="@dimen/x300"
        android:layout_marginLeft="@dimen/x10"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x20"
        android:hint="原手机号码"
        android:background="@drawable/ic_change_edt"
        android:paddingLeft="@dimen/x10"
        />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/x40"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/x10"
    >
    <EditText
        android:id="@+id/change_Img_code"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_marginLeft="@dimen/x10"
        android:layout_height="@dimen/x40"
        android:hint="图片验证码"
        android:background="@drawable/ic_change_edt"
        android:paddingLeft="@dimen/x10"
        />
    <RelativeLayout
        android:id="@+id/change_Img"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="@dimen/x15"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/x10"
        >

    </RelativeLayout>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x20"
        android:text="提示：更换手机号之前需要验证原手机号"
        android:textSize="@dimen/x13"
        android:textColor="@color/text_color"
        />
    <Button
        android:id="@+id/change_sendMsg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:text="发送短信"
        android:textColor="@color/color_primary_white"
        android:background="@color/color_primary_blue"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        />



</LinearLayout>
