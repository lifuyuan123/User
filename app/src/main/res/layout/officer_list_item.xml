<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >
    <LinearLayout
        android:layout_marginTop="@dimen/x5"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:background="@color/color_primary_white"
        android:layout_width="@dimen/x150"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_officer_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x150"
            android:src="@mipmap/bg_home_test_6"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tv_officer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小扶"
            android:textSize="@dimen/x15"
            android:textColor="@color/color_primary_black"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            />
        <TextView
            android:id="@+id/tv_officer_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美容师"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x3"
            android:layout_marginBottom="@dimen/x10"
            />
    </LinearLayout>

</LinearLayout>