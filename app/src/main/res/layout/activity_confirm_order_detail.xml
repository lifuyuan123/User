<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pay_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.act.ConfirmOrderDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/confirm_order_back"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x40"
            android:layout_height="match_parent"
            android:text="确认订单"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
            android:id="@+id/textView2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_primary_white"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_marginLeft="@dimen/x40"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="收货人："
                android:textColor="@color/color_primary_black"
                />
            <TextView
                android:id="@+id/confirm_order_consignee"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="刘浩"
                android:textColor="@color/color_primary_black"
                />
            <TextView
                android:id="@+id/confirm_order_PhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="18728888305"
                android:gravity="center"
                android:layout_marginRight="@dimen/x30"
                android:textColor="@color/color_primary_black"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x4"
            android:src="@mipmap/ic_barimg"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x5"
            android:background="#EFEFEF"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/ic_logo"
                android:layout_marginLeft="@dimen/x15"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x15"
                android:gravity="center_vertical"
                android:text="沃钱包官方平台"
                android:textSize="@dimen/x11"
                android:textColor="@color/color_primary_black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x75"
            android:orientation="horizontal"
            android:background="@color/color_fade_gray"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/confirm_order_incon"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:src="@mipmap/ic_icon"
                android:layout_marginLeft="@dimen/x15"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x15"
                >
                <TextView
                    android:id="@+id/confirm_order_MerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="沃钱包分享者名额"
                    android:textColor="@color/color_primary_black"
                    android:textSize="@dimen/x14"
                    />
                <TextView
                    android:id="@+id/confirm_order_MerPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥500.00"
                    android:textColor="@color/color_primary_pink"
                    android:layout_marginTop="@dimen/x5"
                    android:textSize="@dimen/x15"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="X1"
                android:gravity="center"
                android:layout_marginRight="@dimen/x10"
                android:textColor="@color/color_primary_black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x15"
                android:gravity="center_vertical"
                android:text="购买数量"
                android:textColor="@color/color_primary_black"
                android:textSize="@dimen/x13"
                />
            <Button
                android:id="@+id/confirm_order_BtnSub"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x20"
                android:text="—"
                android:textSize="20sp"
                android:background="@drawable/ic_button_shapes"
                />
            <TextView
                android:id="@+id/confirm_order_TxtNum"
                android:layout_width="@dimen/x30"
                android:layout_height="match_parent"
                android:text="1"
                android:gravity="center"
                android:textSize="@dimen/x15"
                android:textColor="@color/color_primary_black"
                />
            <Button
                android:id="@+id/confirm_order_BtnAdd"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x20"
                android:text="+"
                android:textSize="20sp"
                android:background="@drawable/ic_button_shapes"
                android:layout_marginRight="@dimen/x10"
                />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x305"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:background="@color/color_fade_gray"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:layout_marginLeft="@dimen/x14"
            android:text="此商品为定制，不支持7天无理由退货"
            android:textColor="@color/color_primary_black"
            android:gravity="center_vertical"
            android:textSize="@dimen/x13"
            />
        <TextView
            android:layout_width="@dimen/x305"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:background="@color/color_fade_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x15"
                android:textColor="@color/color_primary_black"
                android:textSize="@dimen/x13"
                android:text="买家留言:"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10"
                android:hint="选填：对本次交易的说明(建议填写...."
                android:textSize="@dimen/x13"
                android:background="@null"
                />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x305"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:background="@color/color_fade_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/confirm_order_TxtNums"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="共1件商品"
                android:textSize="@dimen/x12"
                android:textColor="@color/color_primary_black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="合计:"
                android:textSize="@dimen/x12"
                android:textColor="@color/color_primary_black"
                android:layout_marginLeft="@dimen/x10"
                />
            <TextView
                android:id="@+id/confirm_order_TotalMoney"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/color_primary_pink"
                android:text="¥500.00"
                android:textSize="@dimen/x12"
                android:layout_marginRight="@dimen/x10"
                />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/confirm_order_Btnsure"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x40"
            android:background="@drawable/ic_button_shape"
            android:text="确认购买"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x15"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x10"
            />
    </RelativeLayout>
</LinearLayout>
