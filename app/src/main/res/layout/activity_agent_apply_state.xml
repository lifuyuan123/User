<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_agent_apply_state"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mayikang.wowallet.ui.act.AgentApplyStateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x270"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/ic_agent_apply_backg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <RelativeLayout
                android:id="@+id/agent_apply_state_back"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40">
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_left_white_arrow"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20" />
            </RelativeLayout>


            <TextView
                android:textSize="@dimen/x18"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="代理商选择"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/agent_apply_state_refish"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_alignParentRight="true"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:src="@drawable/ic_refish"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_marginTop="@dimen/x40"
            android:src="@drawable/ic_agent_apply_state"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/agent_apply_state_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代理套餐一申请成功，请等待管理员审核！"
            android:textColor="@color/text_color"
            android:layout_marginTop="@dimen/x30"
            android:textSize="@dimen/x14"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:text="预计一个工作日内审核完成"
            android:textSize="@dimen/x13"
            />
    </LinearLayout>
</LinearLayout>
