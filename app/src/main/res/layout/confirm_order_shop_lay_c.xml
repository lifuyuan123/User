<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送方式"
                android:textSize="@dimen/x15"
                android:layout_marginLeft="@dimen/x15"
                android:textColor="#303030"
                />
            <TextView
                android:id="@+id/con_order_shop_lay_c_mallMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="快递 免邮"
                android:textSize="@dimen/x15"
                android:gravity="right"
                android:layout_marginRight="@dimen/x10"
                android:textColor="#303030"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/app_fade_gray"
            android:layout_marginLeft="@dimen/x15"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:textSize="@dimen/x15"
                android:layout_marginLeft="@dimen/x15"
                android:textColor="#303030"
                />
            <TextView
                android:id="@+id/con_order_shop_lay_c_payWay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在线支付"
                android:textSize="@dimen/x15"
                android:gravity="right"
                android:layout_marginRight="@dimen/x10"
                android:textColor="#303030"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/app_fade_gray"
            android:layout_marginLeft="@dimen/x15"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x15"
                android:layout_margin="@dimen/x15"
                android:text="卖家留言："
                android:textColor="#303030"
                />
            <EditText
                android:id="@+id/con_order_shop_lay_c_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:layout_marginRight="@dimen/x10"
                android:background="@null"
                android:hint="选填：对本次交易说明"
                android:textSize="@dimen/x12"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/app_fade_gray"
            android:layout_marginLeft="@dimen/x15"
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            >
            <TextView
                android:id="@+id/con_order_shop_lay_c_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共1件商品"
                android:textColor="#303030"
                />
            <TextView
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小计："
                android:textColor="#303030"
                />
            <TextView
                android:id="@+id/con_order_shop_lay_c_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥388.13"
                android:textColor="#FB4E44"
                android:layout_marginRight="@dimen/x10"
                />

        </LinearLayout>

        
    </LinearLayout>

</LinearLayout>