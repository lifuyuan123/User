<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80">
        <ImageView
            android:id="@+id/item_iv_goods_icon"
            android:src="@drawable/icon_ticket"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_tv_goods_name"
                    android:textSize="@dimen/x12"
                    android:text="2017秋季韩版牛皮的上衣女子夏季纯棉的牛皮的衣服穿了要上天"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_tv_goods_price"
                    android:layout_marginLeft="@dimen/x15"
                    android:textColor="#2F2F2F"
                    android:textSize="@dimen/x12"
                    android:text="￥50.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/x12"
                    android:textColor="#919191"
                    android:text="颜色分类："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_tv_goods_color"
                    android:textSize="@dimen/x12"
                    android:textColor="#919191"
                    android:layout_weight="1"
                    android:text="红色"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_tv_goods_count"
                    android:textSize="@dimen/x12"
                    android:textColor="#919191"
                    android:text="x1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:background="@color/app_fade_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1" />
</LinearLayout>