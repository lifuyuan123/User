<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="套餐使用情况"
                android:layout_marginLeft="@dimen/x15"
                android:textSize="@dimen/x15"
                android:textColor="@color/color_primary_blue"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/app_fade_gray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="套餐名称:"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="@dimen/x20"
                    android:textSize="@dimen/x13"
                    />

                <TextView
                    android:id="@+id/agent_mange_tc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="@dimen/x20"
                    android:textSize="@dimen/x13"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x15"
                android:background="@color/color_divider_gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="可代理店铺数:"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="@dimen/x20"
                    android:textSize="@dimen/x13"
                    />

                <TextView
                    android:id="@+id/agent_mange_storeNumber"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="@dimen/x20"
                    android:textSize="@dimen/x13"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x15"
                android:background="@color/color_divider_gray"
                />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="已代理店铺数："
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="@dimen/x20"
                    android:textSize="@dimen/x13"
                    />

                <TextView
                    android:id="@+id/agent_mange_storeNumbers"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="@dimen/x20"
                    android:textSize="@dimen/x13"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x15"
                android:background="@color/color_divider_gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="平台购买金额："
                    android:textSize="@dimen/x13"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="@dimen/x20"
                    />
                <TextView
                    android:id="@+id/agent_mange_gmje"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/x13"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="@dimen/x20"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已代理用户"
                    android:textColor="@color/color_primary_blue"
                    android:layout_marginLeft="@dimen/x15"
                    android:textSize="@dimen/x15"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入驻时间"
                    android:textSize="@dimen/x15"
                    android:textColor="@color/color_primary_blue"
                    android:layout_marginLeft="@dimen/x45"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态"
                    android:textSize="@dimen/x15"
                    android:textColor="@color/color_primary_blue"
                    android:layout_marginLeft="@dimen/x60"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/app_fade_gray"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/agent_mange_lay_a_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:src="@drawable/ic_error"
            android:layout_marginTop="@dimen/x120"
            />
        <TextView
            android:layout_width="@dimen/x180"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/x10"
            android:text="暂无代理店铺"
            android:textSize="@dimen/x14"
            android:textColor="@color/text_color"
            />
    </LinearLayout>
</LinearLayout>