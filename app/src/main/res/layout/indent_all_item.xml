<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/indent_all_item_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/color_primary_white"
        >
        <ImageView
            android:id="@+id/indent_all_item_Img"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:src="@mipmap/ic_icon"
            android:layout_marginLeft="@dimen/x15"
            />
        <LinearLayout
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/indent_all_item_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="克里迪拿高新店"
                    android:textSize="@dimen/x14"
                    android:textColor="@color/color_primary_black"
                    />
                <TextView
                    android:id="@+id/indent_all_item_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="￥500"
                    android:gravity="right"
                    android:textSize="@dimen/x14"
                    android:textColor="@color/color_primary_black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x7"
                >
                <TextView
                    android:id="@+id/indent_all_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4月15日"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="@dimen/x305"
        android:layout_height="@dimen/x1"
        android:background="@color/color_fade_gray"
        android:layout_marginLeft="@dimen/x15"
        />
</LinearLayout>