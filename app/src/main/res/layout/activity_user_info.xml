<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.act.UserInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/userInfo_back_rl"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x40"
            android:layout_height="match_parent"
            android:text="个人资料"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_primary_white"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:id="@+id/act_user_ll_to_change_portrait"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x65"
            android:orientation="horizontal"
            android:background="@color/color_primary_white"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textColor="@color/color_primary_black"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/x14"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_info_userImg"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:src="@mipmap/icon_default_portrait"
                    />
                <ImageView
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13"
                    android:src="@mipmap/icon_arrow_gray_right"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/color_fade_gray"
            android:layout_marginLeft="@dimen/x10"
            />
        <LinearLayout
            android:id="@+id/userInfo_userName_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/color_primary_black"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/x14"
                android:text="用户名"
                android:gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/user_info_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x13"
                    />
                <ImageView
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13"
                    android:src="@mipmap/icon_arrow_gray_right"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/color_fade_gray"
            android:layout_marginLeft="@dimen/x10"
            />

        <LinearLayout
            android:id="@+id/user_info_realNameLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/color_primary_black"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/x14"
                android:text="真实姓名"
                android:gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/user_info_realName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x13"
                    />
                <ImageView
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13"
                    android:src="@mipmap/icon_arrow_gray_right"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/color_fade_gray"
            android:layout_marginLeft="@dimen/x10"
            />

        <LinearLayout
            android:id="@+id/user_info_alipayLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/color_primary_black"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/x14"
                android:text="支付宝账号"
                android:gravity="center_vertical"
                android:id="@+id/textView7" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/user_info_alipayNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x13"
                    />
                <ImageView
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13"
                    android:src="@mipmap/icon_arrow_gray_right"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_fade_gray"
            android:layout_marginLeft="@dimen/x10"
            />

        <LinearLayout
            android:id="@+id/userInfo_phoneNumber_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/color_primary_black"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/x14"
                android:text="手机号"
                android:gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/user_info_phoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x13"
                    />
                <ImageView
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13"
                    android:src="@mipmap/icon_arrow_gray_right"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/color_fade_gray"
            android:layout_marginLeft="@dimen/x10"
            />
        <LinearLayout
            android:id="@+id/userInfo_Email_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/color_primary_black"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/x14"
                android:text="邮箱地址"
                android:gravity="center_vertical"
                android:id="@+id/textView" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/user_info_emailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x13"
                    />
                <ImageView
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13"
                    android:src="@mipmap/icon_arrow_gray_right"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/color_fade_gray"
            android:layout_marginLeft="@dimen/x10"
            />
        <LinearLayout
            android:id="@+id/userInfo_qr_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/color_primary_black"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/x14"
                android:text="我的二维码"
                android:gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:src="@mipmap/ic_qr_code"
                    />
                <ImageView
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13"
                    android:src="@mipmap/icon_arrow_gray_right"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/color_fade_gray"
            android:layout_marginLeft="@dimen/x10"
            />
        <LinearLayout
            android:id="@+id/userInfo_lin_adress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/color_primary_black"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/x14"
                android:text="收货地址"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/user_info_tv_Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x13"
                    />
                <ImageView
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13"
                    android:src="@mipmap/icon_arrow_gray_right"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userInfo_sex_ll"
        android:layout_marginTop="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/color_primary_white"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/color_primary_black"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="@dimen/x14"
            android:text="性别"
            android:gravity="center_vertical"
            android:id="@+id/textView4" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/user_info_userSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x13"
                />
            <ImageView
                android:layout_width="@dimen/x13"
                android:layout_height="@dimen/x13"
                android:src="@mipmap/icon_arrow_gray_right"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
