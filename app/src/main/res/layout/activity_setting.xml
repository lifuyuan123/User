<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.act.SettingActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:orientation="horizontal"
            android:background="@color/color_primary_blue"
            >
            <RelativeLayout
                android:layout_width="@dimen/x40"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/setting_back"
                >
                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:src="@mipmap/icon_left_white_arrow"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/x40"
                android:layout_height="match_parent"
                android:text="设置"
                android:gravity="center"
                android:textColor="@color/color_primary_white"
                android:textSize="@dimen/x18"
                 />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:orientation="vertical"
            android:background="@color/color_primary_white"
            >



            <LinearLayout
                android:id="@+id/setting_paypas_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="@color/color_primary_white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="支付密码"
                    android:textSize="@dimen/x15"
                    android:textColor="@color/color_primary_black"
                    android:layout_marginLeft="@dimen/x10"
                    />
                <ImageView
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13"
                    android:src="@mipmap/icon_arrow_gray_right"
                    android:layout_marginRight="@dimen/x10"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_loginpas_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="@color/color_primary_white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="登陆密码"
                    android:textSize="@dimen/x15"
                    android:textColor="@color/color_primary_black"
                    android:layout_marginLeft="@dimen/x10"
                    />
                <ImageView
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13"
                    android:src="@mipmap/icon_arrow_gray_right"
                    android:layout_marginRight="@dimen/x10"
                    />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/setting_private_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="@color/color_primary_white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="隐私"
                    android:textSize="@dimen/x15"
                    android:textColor="@color/color_primary_black"
                    android:layout_marginLeft="@dimen/x10"
                    />
                <ImageView
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13"
                    android:src="@mipmap/icon_arrow_gray_right"
                    android:layout_marginRight="@dimen/x10"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/color_fade_gray"
                />

            <LinearLayout
                android:id="@+id/setting_ver_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="@color/color_primary_white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x10"
                        android:gravity="center_vertical"
                        android:text="当前版本"
                        android:textColor="@color/color_primary_black"
                        android:textSize="@dimen/x15" />

                    <TextView
                        android:id="@+id/act_setting_tv_version"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


                <ImageView
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13"
                    android:src="@mipmap/icon_arrow_gray_right"
                    android:layout_marginRight="@dimen/x10"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:background="@color/color_fade_gray"
                />
            <LinearLayout
                android:id="@+id/setting_exit_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:gravity="center_vertical"
                android:background="@color/color_fade_gray"
                >
                <TextView
                    android:layout_width="@dimen/x300"
                    android:layout_height="match_parent"
                    android:text="退出登陆"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x10"
                    android:textColor="@color/white"
                    android:background="@drawable/ic_outlogin_button"
                    android:textSize="@dimen/x16"
                    />
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>
