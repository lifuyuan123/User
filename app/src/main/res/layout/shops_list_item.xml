<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/store_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100">
        <ImageView
            android:id="@+id/shops_item_icon"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/x10"
            android:src="@drawable/ic_ownicon"
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:layout_toRightOf="@+id/shops_item_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/shops_item_name"
                    android:textSize="@dimen/x15"
                    android:textColor="#454545"
                    android:layout_gravity="left|center_vertical"
                    android:text="圣保罗美肤中心"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/shops_item_distance"
                    android:textSize="@dimen/x10"
                    android:text="914m"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_toRightOf="@+id/shops_item_icon"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x10"
            android:id="@+id/shops_item_sold_number"
            android:textSize="@dimen/x10"
            android:text="已售89"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@+id/shops_item_icon"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x40"
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/shops_item_content"
            android:textSize="@dimen/x12"
            android:textColor="#98999A"
            android:text="[多城市]全场参与返利，满500返100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:background="@color/color_txt_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</LinearLayout>