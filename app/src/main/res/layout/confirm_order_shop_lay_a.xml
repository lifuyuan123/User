<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/con_order_shop_lay_a_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x120"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginLeft="@dimen/x40"
                android:layout_marginRight="@dimen/x50"
                android:layout_marginTop="@dimen/x20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/con_order_shop_lay_a_UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人：刘浩"
                    android:textColor="#2E2E2E"
                    android:textSize="@dimen/x15"
                    />
                <TextView
                    android:id="@+id/con_order_shop_lay_a_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="18728888305"
                    android:gravity="right|center_vertical"
                    android:textColor="#2E2E2E"
                    android:textSize="@dimen/x15"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:src="@drawable/ic_order_detail_location"
                    />
                <TextView
                    android:id="@+id/con_order_shop_lay_a_location"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="收货地址：四川省成都市武侯区天益街理想中心3栋1307室"
                    android:layout_marginLeft="@dimen/x10"
                    android:textColor="#2E2E2E"
                    android:layout_marginRight="@dimen/x10"
                    />
                <ImageView
                    android:layout_width="@dimen/x15"
                    android:layout_height="@dimen/x15"
                    android:layout_marginRight="@dimen/x10"
                    android:src="@drawable/ic_order_detail_next"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x7"
            android:background="@drawable/ic_confirm_order_g"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10"
            android:background="@color/app_fade_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_marginLeft="@dimen/x12"
                    android:src="@drawable/ic_order_detail_store"
                    />
                <LinearLayout
                    android:id="@+id/order_detail_lay_b_GotoStore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x10"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/con_order_shop_lay_a_StoreName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="@dimen/x16"
                        android:text="欧或旗舰店"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>