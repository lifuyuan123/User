<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efefef"
    tools:context="com.example.mayikang.wowallet.ui.act.TransferActivity">

    <RelativeLayout
        android:background="@color/color_primary_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_left_white_arrow"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20" />
        </RelativeLayout>


        <TextView
            android:textSize="@dimen/x18"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="转账给朋友"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginLeft="@dimen/x15"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_default_portrait"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30">
            <TextView
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:ellipsize="end"
                android:id="@+id/username"
                android:textSize="@dimen/x15"
                android:singleLine="true"
                android:text=""
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:background="@color/dividers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />

        <RelativeLayout
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/x16"
                android:textColor="#000000"
                android:text="转账金额"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="￥"
                    android:textColor="#000000"
                    android:textSize="@dimen/x14" />
            </RelativeLayout>

            <EditText
                android:id="@+id/et"
                android:inputType="numberDecimal"
                android:textSize="@dimen/x14"
                android:hint="请输入转账金额"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_transfer"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="@dimen/x16"
            android:textColor="@color/white"
            android:text="转账"
            android:background="@drawable/x_normal_blue_retangle_border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40" />

    </LinearLayout>






</LinearLayout>
