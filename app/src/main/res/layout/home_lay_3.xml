<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_primary_white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/icon_vertical_line_left"
                android:layout_width="@dimen/x20"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_marginRight="@dimen/x20"
                android:layout_marginLeft="@dimen/x20"
                android:src="@mipmap/icon_home_brand"
                android:layout_width="@dimen/x100"
                android:layout_height="wrap_content" />

            
            <ImageView
                android:src="@mipmap/icon_vertical_line_right"
                android:layout_width="@dimen/x20"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x180"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginTop="@dimen/x5"
        android:orientation="horizontal">

        <!--左侧大图-->
        <LinearLayout
            android:id="@+id/home_lay_1_ll_brand_1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:background="#FA4D5F"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/home_lay_3_tv_popularity_1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="@dimen/x24"
                        android:textColor="@color/color_primary_white"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/home_lay_3_tv_name_1"
                        android:textSize="@dimen/x14"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textColor="@color/color_primary_white"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:src="@drawable/ic_defult_pphz"
                    android:id="@+id/home_lay_3_iv_1"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/x5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/home_lay_1_rl_brand_2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/home_lay_3_iv_2"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_defult_pphz_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:paddingRight="@dimen/x2"
                    android:paddingLeft="@dimen/x2"
                    android:paddingTop="@dimen/x4"
                    android:paddingBottom="@dimen/x4"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_marginLeft="@dimen/x5"
                    android:background="#90322616"
                    android:layout_width="@dimen/x45"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/x12"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_primary_white"
                        android:gravity="center"
                        android:text="人气"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:background="@color/color_primary_white"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x2" />

                    <TextView
                        android:id="@+id/home_lay_3_tv_popularity_2"
                        android:textSize="@dimen/x24"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_primary_white"
                        android:gravity="center"
                        android:text="0"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <TextView
                    android:id="@+id/home_lay_3_tv_name_2"
                    android:textSize="@dimen/x12"
                    android:layout_marginLeft="@dimen/x2"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/color_primary_white"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_lay_1_rl_brand_4"
                android:layout_marginTop="@dimen/x5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/home_lay_3_iv_4"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_defult_pphz_tree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
                <LinearLayout
                    android:paddingRight="@dimen/x2"
                    android:paddingLeft="@dimen/x2"
                    android:paddingTop="@dimen/x4"
                    android:paddingBottom="@dimen/x4"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_marginLeft="@dimen/x5"
                    android:background="#90322616"
                    android:layout_width="@dimen/x45"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/x12"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_primary_white"
                        android:gravity="center"
                        android:text="人气"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:background="@color/color_primary_white"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x2" />

                    <TextView
                        android:id="@+id/home_lay_3_tv_popularity_4"
                        android:textSize="@dimen/x24"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_primary_white"
                        android:gravity="center"
                        android:text="0"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <TextView
                    android:id="@+id/home_lay_3_tv_name_4"
                    android:textSize="@dimen/x12"
                    android:layout_marginLeft="@dimen/x2"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/color_primary_white"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/x5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/home_lay_1_rl_brand_3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/home_lay_3_iv_3"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_defult_pphz_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:paddingRight="@dimen/x2"
                    android:paddingLeft="@dimen/x2"
                    android:paddingTop="@dimen/x4"
                    android:paddingBottom="@dimen/x4"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_marginLeft="@dimen/x5"
                    android:background="#90322616"
                    android:layout_width="@dimen/x45"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/x12"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_primary_white"
                        android:gravity="center"
                        android:text="人气"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:background="@color/color_primary_white"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x2" />

                    <TextView
                        android:id="@+id/home_lay_3_tv_popularity_3"
                        android:textSize="@dimen/x24"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_primary_white"
                        android:gravity="center"
                        android:text="0"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/home_lay_3_tv_name_3"
                    android:textSize="@dimen/x12"
                    android:layout_marginLeft="@dimen/x2"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/color_primary_white"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_lay_1_rl_brand_5"
                android:layout_marginTop="@dimen/x5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/home_lay_3_iv_5"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_defult_pphz_four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/home_lay_3_tv_name_5"
                    android:textSize="@dimen/x12"
                    android:layout_marginLeft="@dimen/x2"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/color_primary_white"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:paddingRight="@dimen/x2"
                    android:paddingLeft="@dimen/x2"
                    android:paddingTop="@dimen/x4"
                    android:paddingBottom="@dimen/x4"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="@dimen/x5"
                    android:background="#90322616"
                    android:layout_width="@dimen/x45"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/home_lay_3_tv_name_5"
                    android:layout_marginStart="6dp">
                    <TextView
                        android:textSize="@dimen/x12"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_primary_white"
                        android:gravity="center"
                        android:text="人气"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:background="@color/color_primary_white"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x2" />

                    <TextView
                        android:id="@+id/home_lay_3_tv_popularity_5"
                        android:textSize="@dimen/x24"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_primary_white"
                        android:gravity="center"
                        android:text="0"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/x15"
        android:background="#EEEFF0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10" />

</LinearLayout>
