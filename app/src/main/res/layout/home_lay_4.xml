<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_primary_white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/home_lay_4_rl_to_more_product"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35">
        <TextView
            android:id="@+id/home_lay4_tv_goods"
            android:layout_marginLeft="@dimen/x5"
            android:textSize="@dimen/x16"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textStyle="bold"
            android:text="热销单品区"
            android:textColor="#FA4D5F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/home_lay4_tv_goods"
            android:layout_marginLeft="@dimen/x5"
            android:textSize="@dimen/x12"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="优惠活动先到先得"
            android:textColor="@color/color_txt_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="bottom"
                android:src="@mipmap/icon_more_action"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20" />

            <TextView
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/x4"
                android:textSize="@dimen/x12"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="更多热销"
                android:textColor="#FA4D5F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="@dimen/x2"
                android:layout_marginLeft="@dimen/x4"
                android:layout_gravity="bottom"
                android:src="@mipmap/icon_arrow_gray_right"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20" />

        </LinearLayout>

    </RelativeLayout>



    <LinearLayout

        android:layout_marginTop="@dimen/x10"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginLeft="@dimen/x5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100">
        <LinearLayout
            android:id="@+id/home_lay_4_ll_product_1"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/home_lay_4_iv_1"

                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/home_lay_4_tv_describe_1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textColor="@color/color_primary_white"
                    android:background="#99A7BCF7"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x20" />
            </RelativeLayout>

            <TextView
                android:id="@+id/home_lay_4_tv_name_1"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_lay_4_ll_product_2"
            android:layout_marginRight="@dimen/x5"
            android:layout_marginLeft="@dimen/x5"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/home_lay_4_iv_2"

                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/home_lay_4_tv_describe_2"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textColor="@color/color_primary_white"
                    android:background="#99A7BCF7"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x20" />
            </RelativeLayout>

            <TextView
                android:id="@+id/home_lay_4_tv_name_2"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_lay_4_ll_product_3"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/home_lay_4_iv_3"

                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/home_lay_4_tv_describe_3"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textColor="@color/color_primary_white"
                    android:background="#99A7BCF7"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x20" />
            </RelativeLayout>

            <TextView
                android:id="@+id/home_lay_4_tv_name_3"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/x10"
        android:background="#EEEFF0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10" />
    

</LinearLayout>
