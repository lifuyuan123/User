<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine_balance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_fade_gray"
    tools:context=".ui.act.BalanceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/mine_balance_back"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                android:layout_marginLeft="@dimen/x10"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="余额"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
            />
        <TextView
            android:id="@+id/act_tv_to_balance_detail"
            android:textSize="@dimen/x16"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:text="明细"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:layout_marginRight="@dimen/x10"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:orientation="vertical"
        android:background="@color/color_primary_blue"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x14"
            android:text="账户余额(元)"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x30"
            />
        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x55"
            android:text="0"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x20"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mine_balance_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/color_primary_white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <RelativeLayout
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x10"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_purse"
                />
        </RelativeLayout>
        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="提现"
            android:textColor="@color/color_primary_black"
            android:gravity="center_vertical"
            android:textSize="@dimen/x15"
            />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@mipmap/icon_arrow_gray_right"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            />
    </LinearLayout>
</LinearLayout>
