<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_evaluate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mayikang.wowallet.ui.act.EvaluateActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:id="@+id/evaluate_back_rl"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/evaluate_store_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
            />
        <TextView
            android:id="@+id/evaluate_sure_txt"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:textSize="@dimen/x12"
            android:text="发布"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_marginTop="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary_white"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总分"
                    android:layout_marginLeft="@dimen/x10"
                    android:textSize="@dimen/x14"
                    android:textColor="@color/color_primary_black"
                    />
                <com.github.ornolfr.ratingview.RatingView
                    android:id="@+id/reatingView"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    app:drawable_empty="@mipmap/icon_star_empty"
                    app:drawable_filled="@mipmap/icon_star_full"
                    app:drawable_half="@mipmap/icon_star_half"
                    app:drawable_margin="10dp"
                    app:drawable_size="@dimen/x20"
                    app:is_indicator="false"
                    app:max_count="5"
                    app:rating="0"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/x50"
                    android:id="@+id/evaluate_state"
                    android:layout_width="@dimen/x70"
                    android:layout_height="match_parent"
                    android:text="请评价"
                    android:gravity="center"
                    android:textSize="@dimen/x13"
                    android:textColor="@color/color_primary_blue"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="@dimen/x310"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x10"
                android:background="@color/app_fade_gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:text="评价详情"
                android:gravity="center_vertical"
                android:textSize="@dimen/x14"
                android:textColor="@color/color_primary_black"
                android:layout_marginLeft="@dimen/x10"
                />
            <TextView
                android:layout_width="@dimen/x310"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x10"
                android:background="@color/app_fade_gray"
                />
            <EditText
                android:id="@+id/evaluate_edt"
                android:layout_margin="@dimen/x10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150"
                android:background="@null"
                android:hint="填写评价内容"
                android:gravity="start"
                android:padding="@dimen/x10"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/app_fade_gray"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:text="请上传照片"
                android:gravity="center_vertical"
                android:textColor="@color/color_primary_black"
                android:textSize="@dimen/x14"
                android:layout_marginLeft="@dimen/x10"
                />
            <TextView
                android:layout_width="@dimen/x310"
                android:layout_height="@dimen/x1"
                android:background="@color/app_fade_gray"
                android:layout_marginLeft="@dimen/x10"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/evaluate_recycleView"
                android:layout_margin="@dimen/x10"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/app_fade_gray"
                />
            <LinearLayout
                android:layout_marginBottom="@dimen/x20"
                android:id="@+id/evaluate_ll"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x45"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/evaluate_Img"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:src="@drawable/ic_nocheck"
                    android:layout_marginLeft="@dimen/x20"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="匿名评价"
                    android:textColor="@color/color_primary_black"
                    android:layout_marginLeft="@dimen/x20"
                    android:textSize="@dimen/x14"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
