<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_verify_new_tel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mayikang.wowallet.ui.act.VerifyNewTelActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:id="@+id/VerifyNewTel_back_rl"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="验证新手机号码"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
            />
        <TextView
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/VerifyNewTel_edt_newTel"
        android:layout_width="@dimen/x300"
        android:layout_marginLeft="@dimen/x10"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x20"
        android:hint="新手机号码"
        android:background="@drawable/ic_change_edt"
        android:paddingLeft="@dimen/x10"
        />
    <EditText
        android:id="@+id/VerifyNewTel_edt_coed"
        android:layout_width="@dimen/x300"
        android:layout_marginLeft="@dimen/x10"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x10"
        android:hint="短信验证码"
        android:background="@drawable/ic_change_edt"
        android:paddingLeft="@dimen/x10"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x10"
        >
        <EditText
            android:id="@+id/verifynew_Img_code"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_marginLeft="@dimen/x10"
            android:layout_height="@dimen/x40"
            android:hint="图片验证码"
            android:background="@drawable/ic_change_edt"
            android:paddingLeft="@dimen/x10"
            />
        <RelativeLayout
            android:id="@+id/verifynew_Img"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/x15"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x10"
            />
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x25"
        android:layout_marginBottom="@dimen/x25"
        android:text="提示：绑定新手机之前需要验证"
        android:textSize="@dimen/x13"
        android:textColor="@color/text_color"
        />
    <Button
        android:id="@+id/verifyNewTel_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:text="验证新手机号码"
        android:textColor="@color/color_primary_white"
        android:background="@color/color_primary_blue"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        />

</LinearLayout>
