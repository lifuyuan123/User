<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x195"
        android:background="#55000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/app_fade_gray"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <RelativeLayout
                    android:id="@+id/my_popuWindow_cancel"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x15"
                        android:src="@drawable/ic_confirm_order_qx"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="付款"
                    android:textColor="#F000"
                    />
                <RelativeLayout
                    android:id="@+id/my_popuWindow_trouble"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:src="@drawable/ic_confirm_order_wh"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:background="#E6E8F4"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:src="@drawable/ic_order_detail_store"
                    android:layout_marginLeft="@dimen/x15"
                    />
                <TextView
                    android:id="@+id/my_popuWindow_storeMsg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="向商家用户“哦豁”旗舰店付款"
                    android:textColor="#363C43"
                    />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/my_popuWindow_weixinLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/my_popuWindow_weixin_check"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:src="@drawable/ic_confirm_order_nocheck"
                    android:layout_marginLeft="@dimen/x15"
                    />
                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:src="@drawable/ic_confirm_order_weixin"
                    android:layout_marginLeft="@dimen/x20"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textSize="@dimen/x15"
                    android:textColor="#F000"
                    android:layout_marginLeft="@dimen/x15"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/app_fade_gray"
                android:layout_marginLeft="@dimen/x15"
                />

            <LinearLayout
                android:id="@+id/my_popuWindow_alipay_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/my_popuWindow_alipay_check"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:src="@drawable/ic_confirm_order_nocheck"
                    android:layout_marginLeft="@dimen/x15"
                    />
                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:src="@drawable/ic_confirm_order_alipay"
                    android:layout_marginLeft="@dimen/x20"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝支付"
                    android:textSize="@dimen/x15"
                    android:textColor="#F000"
                    android:layout_marginLeft="@dimen/x15"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:background="@color/app_fade_gray"
            />
    </LinearLayout>
</LinearLayout>