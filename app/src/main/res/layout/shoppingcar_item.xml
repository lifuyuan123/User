<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:layout_marginBottom="@dimen/x10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x70">
        <CheckBox
            android:id="@+id/shopping_item_check"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/shopping_check_back"
            android:button="@null"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />
        
        <ImageView
            android:id="@+id/shopping_iv_icon"
            android:src="@drawable/icon_shopping_item"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="@dimen/x70"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#F8F8F8"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shopping_tv_title"
                android:layout_marginTop="@dimen/x10"
                android:textColor="#333333"
                android:textSize="@dimen/x14"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:text="[台湾1209艺术美甲]水感深层护理"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/shopping_tv_price"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x20"
                    android:textColor="#FB4644"
                    android:textSize="@dimen/x14"
                    android:text="￥58.8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:gravity="right"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/shopping_tv_count_after"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/x15"
                        android:layout_marginLeft="@dimen/x10"
                        android:textColor="#999999"
                        android:textSize="@dimen/x14"
                        android:text="x6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/shopping_lin_add_reduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x12"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/shopping_iv_reduce"
                            android:layout_width="@dimen/x20"
                            android:layout_height="@dimen/x20"
                            android:src="@drawable/icon_shopping_reduce" />

                        <TextView
                            android:id="@+id/shopping_tv_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x8"
                            android:layout_marginRight="@dimen/x8"
                            android:text="3"
                            android:textColor="#999999"
                            android:textSize="@dimen/x14" />

                        <ImageView
                            android:id="@+id/shopping_iv_add"
                            android:layout_width="@dimen/x20"
                            android:layout_height="@dimen/x20"
                            android:src="@drawable/icon_shopping_add" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>